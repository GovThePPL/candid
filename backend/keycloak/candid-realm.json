{
  "realm": "candid",
  "enabled": true,
  "loginTheme": "candid",
  "registrationAllowed": true,
  "registrationEmailAsUsername": false,
  "resetPasswordAllowed": true,
  "accessTokenLifespan": 3600,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "defaultSignatureAlgorithm": "RS256",
  "roles": {
    "realm": [
      { "name": "guest", "description": "Guest user with limited access" },
      { "name": "normal", "description": "Standard authenticated user" },
      { "name": "moderator", "description": "Content moderator" },
      { "name": "admin", "description": "System administrator" }
    ]
  },
  "defaultRole": {
    "name": "default-roles-candid",
    "composites": {
      "realm": ["normal"]
    }
  },
  "clients": [
    {
      "clientId": "candid-app",
      "name": "Candid Frontend App",
      "enabled": true,
      "publicClient": true,
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "redirectUris": [
        "http://localhost:3001/*",
        "http://localhost:8081/*",
        "http://localhost:8082/*",
        "http://localhost:19006/*",
        "exp://localhost:8081/*",
        "exp://localhost:3001/*",
        "exp://*",
        "candid://*"
      ],
      "webOrigins": [
        "+"
      ],
      "attributes": {
        "pkce.code.challenge.method": "S256"
      },
      "protocol": "openid-connect",
      "protocolMappers": [
        {
          "name": "polis-audience",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.custom.audience": "users",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "candid-backend",
      "name": "Candid Backend Service Account",
      "enabled": true,
      "publicClient": false,
      "secret": "candid-backend-secret",
      "serviceAccountsEnabled": true,
      "directAccessGrantsEnabled": false,
      "standardFlowEnabled": false,
      "protocol": "openid-connect"
    },
    {
      "clientId": "polis-admin",
      "name": "Polis Admin Client",
      "enabled": true,
      "publicClient": false,
      "secret": "polis-admin-secret",
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "standardFlowEnabled": false,
      "protocol": "openid-connect",
      "protocolMappers": [
        {
          "name": "polis-audience",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.custom.audience": "users",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ],
  "clientScopeMappings": {
    "realm-management": [
      {
        "client": "candid-backend",
        "roles": ["realm-admin"]
      }
    ]
  },
